#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>

#define NUM_TERRITORIOS 5
#define NUM_MISSOES 5

// Estrutura representando cada territﾃｳrio
typedef struct {
    char nome[30];
    char cor[10];
    int tropas;
} Territorio;

// -------------------- Funﾃｧﾃｵes --------------------

// Sorteia e atribui uma missﾃ｣o ao jogador
void atribuirMissao(char* destino, char* missoes[], int totalMissoes) {
    int sorteio = rand() % totalMissoes;
    strcpy(destino, missoes[sorteio]);
}

// Exibe a missﾃ｣o do jogador
void exibirMissao(char* missao) {
    printf("\nSua missﾃ｣o ﾃｩ: %s\n", missao);
}

// Exibe o estado atual de todos os territﾃｳrios
void exibirMapa(Territorio* mapa, int tamanho) {
    printf("\nEstado atual do mapa:\n");
    printf("---------------------------------------------\n");
    for (int i = 0; i < tamanho; i++) {
        printf("%d - %-10s | Cor: %-8s | Tropas: %d\n",
               i + 1, mapa[i].nome, mapa[i].cor, mapa[i].tropas);
    }
    printf("---------------------------------------------\n");
}

// Funﾃｧﾃ｣o que simula um ataque entre dois territﾃｳrios
void atacar(Territorio* atacante, Territorio* defensor) {
    printf("\n  %s (%s) estﾃ｡ atacando %s (%s)!\n",
           atacante->nome, atacante->cor, defensor->nome, defensor->cor);

    if (atacante->tropas <= 0) {
        printf(" %s nﾃ｣o tem tropas suficientes para atacar!\n", atacante->nome);
        return;
    }

    if (strcmp(atacante->nome, defensor->nome) == 0) {
        printf("Um territﾃｳrio nﾃ｣o pode atacar a si mesmo!\n");
        return;
    }

    if (strcmp(atacante->cor, defensor->cor) == 0) {
        printf("Vocﾃｪ nﾃ｣o pode atacar territﾃｳrios da mesma cor!\n");
        return;
    }

    // Simulaﾃｧﾃ｣o dos dados
    int dadoAtaque = rand() % 6 + 1;
    int dadoDefesa = rand() % 6 + 1;

    printf("沁ｲ Ataque rolou %d | Defesa rolou %d\n", dadoAtaque, dadoDefesa);

    if (dadoAtaque > dadoDefesa) {
        printf("笨 Vitﾃｳria! %s venceu a batalha!\n", atacante->nome);
        defensor->tropas -= 1;
        atacante->tropas += 1;

        if (defensor->tropas <= 0) {
            printf("沛ｴ %s foi conquistado por %s!\n", defensor->nome, atacante->nome);
            strcpy(defensor->cor, atacante->cor);
            defensor->tropas = 1; // territﾃｳrio conquistado recebe 1 tropa
        }
    } else {
        printf("Derrota! %s perdeu 1 tropa.\n", atacante->nome);
        atacante->tropas -= 1;
        defensor->tropas += 1;

        if (atacante->tropas < 0) atacante->tropas = 0;
    }
}

// Verifica se a missﾃ｣o foi cumprida (lﾃｳgica simples)
int verificarMissao(char* missao, Territorio* mapa, int tamanho) {
    if (strstr(missao, "todos os territorios") != NULL) {
        char corVencedor[10];
        strcpy(corVencedor, mapa[0].cor);
        for (int i = 1; i < tamanho; i++) {
            if (strcmp(mapa[i].cor, corVencedor) != 0)
                return 0; // Ainda nﾃ｣o conquistou tudo
        }
        return 1; // Todos tﾃｪm a mesma cor
    }

    return 0; // Missﾃ｣o nﾃ｣o concluﾃｭda
}

// Libera memﾃｳria alocada dinamicamente
void liberarMemoria(Territorio* mapa, char* missao) {
    free(mapa);
    free(missao);
}

// -------------------- Funﾃｧﾃ｣o principal --------------------
int main() {
    srand(time(NULL));

    Territorio* mapa = (Territorio*)calloc(NUM_TERRITORIOS, sizeof(Territorio));

    // Inicializa territﾃｳrios
    strcpy(mapa[0].nome, "Africa");
    strcpy(mapa[1].nome, "America");
    strcpy(mapa[2].nome, "Europa");
    strcpy(mapa[3].nome, "Oceania");
    strcpy(mapa[4].nome, "Asia");

    // Define cores iniciais
    strcpy(mapa[0].cor, "Azul");
    strcpy(mapa[1].cor, "Vermelho");
    strcpy(mapa[2].cor, "Verde");
    strcpy(mapa[3].cor, "Amarelo");
    strcpy(mapa[4].cor, "Roxo");

    // Atribui tropas iniciais
    for (int i = 0; i < NUM_TERRITORIOS; i++)
        mapa[i].tropas = rand() % 5 + 1;

    // Lista de missﾃｵes
    char* missoes[] = {
        "Destruir X tropa",
        "Conquistar X territorio",
        "Conquistar todos os territorios",
        "Eliminar todas as tropas da cor vermelha",
        "Controlar 3 territorios seguidos"
    };

    // Missﾃ｣o sorteada
    char* missaoJogador = (char*)malloc(100 * sizeof(char));
    atribuirMissao(missaoJogador, missoes, NUM_MISSOES);

    printf("\nMISSﾃグ SORTEADA!\n");
    exibirMissao(missaoJogador);

    // Loop principal
    while (1) {
        exibirMapa(mapa, NUM_TERRITORIOS);

        printf("\nEscolha uma opﾃｧﾃ｣o:\n");
        printf("1 - ATACAR\n");
        printf("2 - VER MISSﾃグ\n");
        printf("3 - SAIR\n");
        printf("Opﾃｧﾃ｣o: ");

        int opcao;
        if (scanf("%d", &opcao) != 1) break;

        if (opcao == 1) {
            int atacante, defensor;
            printf("Escolha o nﾃｺmero do territﾃｳrio que vai ATACAR: ");
            scanf("%d", &atacante);
            printf("Escolha o nﾃｺmero do territﾃｳrio que vai DEFENDER: ");
            scanf("%d", &defensor);

            atacante--; defensor--;

            if (atacante < 0 || atacante >= NUM_TERRITORIOS ||
                defensor < 0 || defensor >= NUM_TERRITORIOS) {
                printf("Escolha invﾃ｡lida!\n");
                continue;
            }

            atacar(&mapa[atacante], &mapa[defensor]);

            if (verificarMissao(missaoJogador, mapa, NUM_TERRITORIOS)) {
                printf("\nMISSﾃグ CONCLUﾃ好A! Vocﾃｪ venceu o jogo!\n");
                break;
            } else {
                printf("\nMissﾃ｣o ainda nﾃ｣o concluﾃｭda.\n");
            }

        } else if (opcao == 2) {
            exibirMissao(missaoJogador);
        } else if (opcao == 3) {
            printf("Saindo do jogo...\n");
            break;
        } else {
            printf("Opﾃｧﾃ｣o invﾃ｡lida! Escolha 1, 2 ou 3.\n");
        }
    }

    liberarMemoria(mapa, missaoJogador);
    printf("\nMemﾃｳria liberada. Fim do jogo!\n");
    return 0;
}
